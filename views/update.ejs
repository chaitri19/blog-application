<main id="site-main">
    <nav>
        <ul>
          <li><a href="#">Blogger</a></li>
          <li><a href="/">Home</a></li>
          <li><a href="/newblog">NewPost</a></li>
        </ul>
      </nav>
    <div class="container">
        <div class="form-title text center">
            <h1 class="title">
                Edit Blog
            </h1>
           <span class="subtitle">Use the below form to edit a blog.</span>
        </div>
        <form method="POST"  id="createblog">
            <div class="newblog">
                <div class="form-group">
                    <label for="title" class="text-light">Title:</label>
                    <input type="hidden" name="id" value="">
                    <input type="text" name="title" value="<%= list.title%>" placeholder="Title here">
                </div>
                <div class="form-group">
                    <label for="image_url" class="text-light">Image_URL:</label>
                    <input type="text" name="image_url" value="<%= list.image_url%>" placeholder="Image URL here">
                </div>
                <div class="form-group">
                    <label for="date" class="text-light">Date:</label>
                    <input type="date" value="<%= list.date%>" name="date" >
                </div>
                <div class="form-group1">
                    <label for="content" class="text-light">Content:</label>
                    <input type="text" name="content" value="<%= list.content%>" placeholder="Description Here:">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update" >Submit</button>
                </div>
            </div>
        </form>

    </div>
</main>

<!-- footer-->
<%-include('include/_footer') %>
